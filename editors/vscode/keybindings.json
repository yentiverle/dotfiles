// Place your key bindings in this file to override the defaultsauto[]
[
    // Bind CTRL + SHIFT + B to toggle the sidebar
    {
        "key": "ctrl+shift+b",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    // Unbind CTRL + B as that is a VIM keybind
    {
        "key": "ctrl+b",
        "command": "-workbench.action.toggleSidebarVisibility"
    },
    // Bind build task to CTRL + ALT + B
    {
        "key": "ctrl+alt+b",
        "command": "workbench.action.tasks.build"
    },
    // Unbind CTRL + SHIFT + B to make room for Toggle Sidebar
    {
        "key": "ctrl+shift+b",
        "command": "-workbench.action.tasks.build"
    },
    // Unbind CTRL + SHIFT + B to make room for Toggle Sidebar
    {
        "key": "ctrl+shift+b",
        "command": "-bicep.build",
    },

    // Unbind CTRL + Shift + D to make room for multicursor selection
    {
        "key": "ctrl+shift+d",
        "command": "-workbench.view.debug",
        "when": "viewContainer.workbench.view.debug.enabled"
    },
    // Bind CTRL + Shift + D to multicursor selection
    {
        "key": "ctrl+shift+d",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    // Unbind CTRL + D as that is a VIM keybind
    {
        "key": "ctrl+d",
        "command": "-editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+o",
        "command": "-workbench.action.files.openFile",
        "when": "true"
    },
    {
        "key": "ctrl+o",
        "command": "-workbench.action.files.openFileFolder",
        "when": "isMacNative && openFolderWorkspaceSupport"
    },
    {
        "key": "ctrl+o",
        "command": "-workbench.action.files.openFolderViaWorkspace",
        "when": "!openFolderWorkspaceSupport && workbenchState == 'workspace'"
    },
    {
        "key": "ctrl+o",
        "command": "workbench.action.quickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "-workbench.action.quickOpen"
    }
]